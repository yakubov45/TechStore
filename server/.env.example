# Copy this file to .env and fill with real secrets. Do NOT commit your .env to git.

NODE_ENV=production
PORT=10000

# MongoDB
MONGODB_URI=your_mongodb_connection_string

# JWT secrets
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=you@example.com
SMTP_PASS=your_smtp_app_password

# Client URL (used for CORS)
VITE_API_URL=https://your-client-url.example.com

# File upload settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp
# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/techstore

# JWT Secrets
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=TechStore <support@techstore.uz>

# Optional: Enable SMTP debug logs for troubleshooting (true/false)
SMTP_DEBUG=false

# Optional: Timeouts (ms)
SMTP_CONNECTION_TIMEOUT=10000
SMTP_GREETING_TIMEOUT=10000
SMTP_SOCKET_TIMEOUT=15000

# SendGrid (preferred for production). If set, SendGrid will be used first.
SENDGRID_API_KEY=

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Frontend URL
CLIENT_URL=https://techstore-kphy.onrender.com

# Additional CORS origins (comma separated, optional)
# ADDITIONAL_CLIENT_ORIGINS=https://example.com,https://another-domain.com

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp
